          <!-- style="background-image: url('<%- article.link %>')"> -->
          
          <div class="row">
            <div class="col-12 col-md-12 col-lg-11 offset-md-1 info">
              <h3 class="ml-3"><%= article.subtitle %></h3>
              <h4><%= createdAt %></h4>
              <h4>By <%= user.fullname %></h4> <!-- FIX -->
              <p><%= article.txt %></p>
            </div>
          </div>
          <div class="more-projects"></div>
        </div>
      </section>
    </main>
    <footer class="page-footer">
      <div class="container">
        <div class="links"><a href="about">About</a></div>
        <div class="social-icons"></div>
      </div>
    </footer>
