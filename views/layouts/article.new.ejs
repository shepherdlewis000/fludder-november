      <section class="portfolio-block project">
        <div class="container">
          <div class="heading">
            <h2><%= article.title %></h2>
          </div>
          <div
            id="artImage"
          ><a href="<%- article.link %>"><img class='img-fluid' src="<%- article.link %>"></a>
        </div>
