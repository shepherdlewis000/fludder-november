            <div class="col-12 col-md-12 col-lg-10 offset-lg-1 offset-xl-1 info">
              <h3><%= article.subtitle %></h3>
              <h4><%= createdAt %></h4>
              <h4>By <%= user.fullname %></h4> <!-- FIX -->
              <div><%- article.txt %></div>
            </div>
          </div>
